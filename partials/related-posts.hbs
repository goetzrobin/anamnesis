{{#get "posts" limit="3" filter="tags:[{{post.tags}}]+id:-{{post.id}}" include="tags" as |related|}}
{{#if related}}
    <section class="related-posts gh-canvas">
        <div class="post-feed">
            <div class="feed-sizer"></div>
            {{#foreach related}}
                {{> "loop"}}
            {{/foreach}}
        </div>
    </section>
{{/if}}
{{/get}}